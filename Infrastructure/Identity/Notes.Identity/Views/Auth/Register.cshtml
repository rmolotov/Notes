@model RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href=@Url.Content("~/Styles/app.css") type="text/css">
    <title>Sign Up</title>
</head>

<body>

<form asp-controller="Auth" asp-action="Register" method="post">
    <input type="hidden" asp-for="ReturnUrl"/>
    <div class="header">
        Sign Up
    </div>
    <div class="block">
        <label>Username</label>
        <input class="input" asp-for="Username"/>
        <span asp-validation-for="Username"></span>
    </div>
    <div class="block">
        <label>Password</label>
        <input class="input" type="password" asp-for="Password"/>
        <span asp-validation-for="Password"></span>
    </div>
    <div class="block">
        <label>Confirm password</label>
        <input class="input" type="password" asp-for="ConfirmPassword"/>
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="block">
        <button class="button" type="submit">Sign Up</button>
    </div>
    <a class="switch-button" asp-controller="Auth" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
        Sign In
    </a>
</form>

</body>
</html>